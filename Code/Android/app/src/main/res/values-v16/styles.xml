<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#404040</item>
        <item name="colorPrimaryDark">#ffffbb33</item>
        <item name="colorAccent">#ffffbb33</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">#ffffbb33</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">#404040</item>

        <item name="android:fontFamily">@font/impact</item>

        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#ffffbb33</item>
        <item name="android:background">#404040</item>

    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffbb33</item>
        <item name="android:background">#404040</item>


    </style>


</resources>